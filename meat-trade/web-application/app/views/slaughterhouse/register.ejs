<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Meat trade web application">
    <meta name="author" content="">

    <title>Register sale - Slaughterhouse to Supermarket</title>

    <!-- Bootstrap core CSS -->
    <link href="../css/lib/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../css/style.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-blue fixed-top">
        <a class="navbar-brand" href="/">Meat Trade</a>
    </nav>

    <div class="row main-content">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Register sale</span>                    
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/farm/register">                            
                            Farm to Slaughterhouse <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">                         
                            Slaughterhouse to Supermarket
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Query sales</span>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link" href="/farm/query">                            
                            Farm to Slaughterhouse
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/slaughterhouse/query">                            
                            Slaughterhouse to Supermarket
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="col-md-10 col-lg-10 col-sm-12 container">
            <div class="alert" id="alert" role="alert">
                <button type="button" class="close" onclick="hideAlert()">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5></h5>
            </div>
            <div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3>Register sale from Slaughterhouse to Supermarket</h3>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <form onsubmit="return registerSale()" id="formRegisterCarcase">
                            <div class="form-group">
                                <label>Seller *</label>
                                <br />
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="slaughterhouse" id="slaughterhouse1"
                                        checked="checked" value="Slaughterhouse">
                                    <label class="form-check-label" for="slaughterhouse1">Slaughterhouse</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Buyer *</label>
                                <br />
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="buyer" id="supermarket1" checked="checked"
                                        value="Supermarket1">
                                    <label class="form-check-label" for="supermarket1">Supermarket1</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="invoiceNumber">Invoice number *</label>
                                <input type="text" class="form-control" id="invoiceNumber" required>
                            </div>
                            <div class="form-group">
                                <label>Sale type *</label>
                                <br />
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="saleType" id="saleTypePublic"
                                        checked="checked" value="registerSale">
                                    <label class="form-check-label" for="saleTypePublic">Public</label>
                                </div>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="saleType" id="saleTypePrivate"
                                        value="registerPrivateSale">
                                    <label class="form-check-label" for="saleTypePublic">Private</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col">
                                        <button class="btn btn-success" type="submit">Register
                                            sale</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                        <br />
                        <hr class="my-6">

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <h4>Add carcase</h4>
                                <form id="formAddCarcase" onsubmit="return addCarcase()">
                                    <div class="form-group">
                                        <label for="carcaseId">Carcase identifier *</label>
                                        <input type="text" class="form-control" id="carcaseId" placeholder="" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="cattleId">Cattle identifier *</label>
                                        <input type="text" class="form-control" id="cattleId" placeholder="" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="weight">Weight *</label>
                                        <input type="number" class="form-control" id="weight" placeholder="" required>
                                    </div>

                                    <label>Type *</label>
                                    <br />
                                    <div class="form-group">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="carcaseType" checked="checked"
                                                id="typeLeft" value="Left">
                                            <label class="form-check-label" for="typeLeft">Left</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="carcaseType" id="typeRight"
                                                value="Right">
                                            <label class="form-check-label" for="typeRight">Right</label>
                                        </div>
                                    </div>

                                    <button class="btn btn-primary" type="submit">Add carcase</button>
                                </form>
                            </div>
                        </div>

                        <br />
                        <hr class="my-6">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <h4>Added carcase</h4>
                                <div class="form-group">
                                    <table id="carcasesTable" class="table table-striped">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col">Id</th>
                                                <th scope="col">Cattle Id</th>
                                                <th scope="col">Weight</th>
                                                <th scope="col">Type</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </main><!-- /.container -->
    </div>    
    <script src="../js/main.js"></script>
    <script src="../js/slaughterhouse/registerSale.js"></script>
</body>

</html>